{% extends "layouts/base.twig"  %}

{% block content_header %}
    <h1>
        Avaliações
        <small>Listagem geral</small>
    </h1>

{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"> Aguardando Avaliação</h3>
                </div>
                <div class="box-body">
                    <table id="tabela-avaliacoes" class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>OS</th>
                                <th>Técnico</th>
                                <th>Valor</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for av in avaliacoes %}
                                <tr>
                                    <td>{{ av.ordemDeServico.id }}</td>
                                    <td>{{ av.tecnico.nome }}</td>
                                    <td>R$ {{ av.ordemDeServico.valorTotal }}</td>
                                    <td class="text-right">
                                        <a role="button" class="btn btn-warning btn-xs"
                                            href="/avaliar-servico/{{ av.id }}">
                                            <i class="fa fa-fw fa-check"></i>
                                            Avaliar Serviço
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript">
        $('#tabela-avaliacoes').DataTable({
            'language': {
                'url': '//cdn.datatables.net/plug-ins/1.10.16/i18n/Portuguese-Brasil.json'
            },

            'paging'      : true,
            'lengthChange': false,
            'searching'   : true,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : true
        });
    </script>
{% endblock %}
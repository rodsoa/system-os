{% extends "layouts/base.twig"  %}

{% block content_header %}
    <h1>
        Fornecedores
        <small>Edição de novo fornecedor</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Início </a></li>
        <li><a href="/fornecedores">Fornecedores</a></li>
        <li class="active">Editar</li>
    </ol>
{% endblock %}

{% block content %}

    {# Mensagens de feedback para o usuário #}
    {% if session.flashdata('msg_sucesso') %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-check"></i> Alerta!</h4>
            {{ session.flashdata('msg_sucesso') }}
        </div>
    {% elseif session.flashdata('msg_erro') %}
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-check"></i> Alerta!</h4>
            {{ session.flashdata('msg_erro') }}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Formulário de edição de fornecedor</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <!-- /.box-tools -->
                </div>
                <!-- /.box-header -->
                <form class="form-horizontal" action="/fornecedores/{{ fornecedor.id }}" method="POST">
                    <div class="box-body">
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs pull-right">
                                <li class="active"><a href="#tab_1-1" data-toggle="tab" aria-expanded="true">Básico</a></li>
                                <li class=""><a href="#tab_2-2" data-toggle="tab" aria-expanded="true">Contato</a></li>
                                <li class=""><a href="#tab_3-2" data-toggle="tab" aria-expanded="true">Endereço</a></li>
                                <li class="pull-left header"><i class="fa fa-th"></i> Fornecedor </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_1-1">

                                    <div class="form-group">
                                        <label for="nome" class="col-sm-2 control-label">Nome</label>

                                        <div class="col-sm-5">
                                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome do fornecedor" value="{{ fornecedor.nome }}">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="cnpj" class="col-sm-2 control-label">CNPJ</label>

                                        <div class="col-sm-5">
                                            <input type="text" class="form-control" id="cnpj" name="cnpj" placeholder="CPF/CNPJ" value="{{ fornecedor.cnpj }}">
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="tab_2-2">
                                    <div class="form-group">
                                        <label for="telefone" class="col-sm-2 control-label">Tel. Residencial</label>

                                        <div class="col-sm-5">
                                            <input type="text" class="form-control" id="telefone" name="telefone" placeholder="Tel. Residencial"
                                                   data-mask="(00) 00000-0000" value="{{ fornecedor.telefone }}">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="celular" class="col-sm-2 control-label">Tel. Celular</label>

                                        <div class="col-sm-5">
                                            <input type="text" class="form-control" id="celular" name="celular" placeholder="Tel. Celular"
                                                   data-mask="(00) 00000-0000" value="{{ fornecedor.celular }}">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="email" class="col-sm-2 control-label">Email</label>

                                        <div class="col-sm-5">
                                            <input type="email" class="form-control" id="email" name="email" placeholder="email" value="{{ fornecedor.email }}">
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="tab_3-2">
                                    <div class="form-group">
                                        <label for="cep" class="col-sm-2 control-label">Cep</label>

                                        <div class="col-sm-5">
                                            <input type="text" class="form-control" id="cep" name="cep" placeholder="00.000-000"
                                                   data-mask="00.000-000" value="{{ fornecedor.cep }}">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="cep" class="col-sm-2 control-label">Endereço</label>

                                        <div class="col-sm-5">
                                            <input type="text" class="form-control" id="endereco" name="endereco" placeholder="Rua Bairro Número" value="{{ fornecedor.endereco }}">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="bairro" class="col-sm-2 control-label">Bairro</label>

                                        <div class="col-sm-5">
                                            <input type="text" class="form-control" id="bairro" name="bairro" placeholder="Bairro" value="{{ fornecedor.bairro }}">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="numero" class="col-sm-2 control-label">Número</label>

                                        <div class="col-sm-5">
                                            <input type="text" class="form-control" id="numero" name="numero" placeholder="Número" maxlength="5" value="{{ fornecedor.numero }}">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="cidade" class="col-sm-2 control-label">Cidade</label>

                                        <div class="col-sm-5">
                                            <input type="text" class="form-control" id="cidade" name="cidade" placeholder="Cidade" value="{{ fornecedor.cidade }}">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="cep" class="col-sm-2 control-label">Estado</label>

                                        <div class="col-sm-5">
                                            <input type="text" class="form-control" id="estado" name="estado" maxlength="2" placeholder="Estado" value="{{ fornecedor.estado }}">
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="col-sm-offset-2">
                            <button type="button"
                                    class="btn btn-danger"
                                    onclick="window.location.href='/fornecedores'">
                                <i class="fa fa-fw fa-arrow-left">&nbsp;</i>
                                Voltar
                            </button>
                            <button type="submit" class="btn btn-success">Cadastrar</button>
                        </div>
                    </div>
                    <!-- /.box-footer -->
                </form>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript">
         $("#cnpj").mask('00.000.000/0000-00', {reverse: true});
    </script>
{% endblock %}